{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "lib": [ "ES2015" ],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
